# Build initial image
ARG IMAGE_NODE_ALPINE_VERSION=node:22.12.0-alpine3.20

FROM ${IMAGE_NODE_ALPINE_VERSION} as builder

LABEL maintainer="Tiago Gon√ßalves <tiagogoncalves@discente.ufg.br>"

RUN /bin/sh -c "apk add --no-cache bash" && \
    apk update && apk add curl wget git vim htop python3 py3-pip busybox-extras figlet && \
    npm install -g @angular/cli@16.2.14

SHELL ["/bin/bash", "-c"]

WORKDIR /APP

# Build final image
FROM ${IMAGE_NODE_ALPINE_VERSION} as runner

COPY --from=builder  /usr/bin/ /usr/bin/
COPY --from=builder  /usr/lib/ /usr/lib/
COPY --from=builder  /usr/share/ /usr/share/

RUN apk add git && /bin/sh -c "apk add --no-cache bash" && mkdir -p /APP && echo 'figlet -t "Lapig New Atlas"' >> ~/.bashrc

SHELL ["/bin/bash", "-c"]

WORKDIR /APP
